#!/bin/bash

run_reset() {
	rm -rfv $HOME/.local/share/nvim $HOME/.local/state/nvim $HOME/.cache/nvim
}

if [ -z "$HOME" ]; then
	echo '$HOME environment variable not set'
	exit 1
fi

read -p "Are you sure you want to reset your nvim state? [y/n]: " input

if [[ "$input" =~ ^[Yy]$ ]]; then
	run_reset
fi
