#!/bin/bash

sudo apt update

echo -e "\n------------\n"

if [ "$1" = "full" ]; then
	sudo apt full-upgrade -y
else
	sudo apt upgrade -y
fi

echo -e "\n------------\n"

sudo apt autopurge -y
sudo apt autoclean -y

echo -e "\n------------\n"

sudo snap refresh

echo -e "\n------------\n"

sudo flatpak update -y

echo -e "\n------------\n"

npm i -g npm@latest yarn@latest pnpm@latest
npm -g upgrade
yarn global upgrade
bun upgrade
bun -g update

pm2 update
